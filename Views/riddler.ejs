        <header>
          <%- include('./components/navbar/navbar.ejs') -%>
            <%- include('./components/riddler/header.ejs') -%>
              <%- include('./components/riddler/rulebook.ejs') -%>
        </header>
        <% } %>
          <script src="/scripts/test/test.js" type="module"></script>
          <script src="/scripts/navbar/script.js" type="module"></script>
